// Changed something? Remember to `npm exec prisma migrate dev`,
// to generate a migration file and regenerate the prisma client

datasource db {
    provider	= "mysql"
    url			= env("DATABASE_URL")
}

generator client {
    provider	= "prisma-client-js"
}

model User {
    id			String		@id @default(cuid())

    email		String		@unique
	username	String		
	gameUUID	String		

	discordId	String?		
	role		Role		@default(USER)

    createdAt	DateTime	@default(now())
    updatedAt	DateTime	@updatedAt

	forms		Form[]

    submissions	Submission[]
}

enum Role {
	USER
	HELPER
	MOD
	ADMIN
}

// FORMS

enum FieldType {
	Section
	Checkbox
	TextArea
	Text
	Radio
}

model Fields {
	id				Int			@id @default(autoincrement())
	form			Form		@relation(fields: [formId], references: [id])
	formId			String			

	title			String
	subtitle		String?
	required		Boolean		@default(false)
	type			FieldType	@default(TextArea)

	submissions		SubmissionField[]
}

model Form {
	id				String		@id @default(cuid())

	name			String		@unique
	subtitle		String

	createdBy		User		@relation(fields: [ownerId], references: [id])
	ownerId			String
	
	category 		String
	fields			Fields[]

	createdAt		DateTime	@default(now())
    updatedAt		DateTime	@updatedAt

    submissions 	Submission[]
}

// FORM SUBMISSIONS

model Submission {
	id				String		@id @default(cuid())

	user			User		@relation(fields: [userId], references: [id])
	userId			String

	form			Form		@relation(fields: [formId], references: [id])
	formId			String

	fields			SubmissionField[]
}

model SubmissionField {
	id				String		@id @default(cuid())

	submission		Submission	@relation(fields: [submissionId], references: [id])
	submissionId	String	

	answer			String

	field			Fields		@relation(fields: [fieldId], references: [id])
	fieldId			Int
}